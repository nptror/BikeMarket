<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BikeMarket</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BikeMarket.styles.css" asp-append-version="true" />
</head>
<body>
@using Microsoft.AspNetCore.Http
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">BikeMarket</a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Brands" asp-action="Index">Brands</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Brands" asp-action="Create">Create Brand</a>
                        </li>

                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if (string.IsNullOrEmpty(Context.Session.GetString("UserId")))
                        {


                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Create">Register</a>
                            </li>
                        }
                        else
                        {
                            var userIdStr = Context.Session.GetString("UserId");
                            var userName = User.Identity?.Name;
                            var avatarInitial = !string.IsNullOrEmpty(userName) ? userName[0].ToString().ToUpperInvariant() : "U";

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Chat" asp-action="Index">Chat</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle p-0" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="seller-avatar">@avatarInitial</div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Users" asp-action="Details" asp-route-id="@userIdStr">Tài khoản</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Wishlists" asp-action="Index">Tin đăng đã lưu</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Vehicles" asp-action="Index">Cửa hàng</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Privacy">Hỗ trợ</a>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form asp-controller="Users" asp-action="Logout" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - BikeMarket
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
