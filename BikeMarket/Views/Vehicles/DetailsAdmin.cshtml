@model BikeMarket.Dtos.Vehicle.VehicleDetailDTO

@{
    ViewData["Title"] = "Bike Details - Admin/Seller";
}

<h1>@Model.Title</h1>
<div class="d-flex gap-2 mb-3">

    <!-- ✏️ Edit -->
    <a asp-action="Edit" asp-route-id="@Model.VehicleId" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Edit
    </a>

    <!-- 🗑️ Delete -->
    <a asp-action="Delete" asp-route-id="@Model.VehicleId" class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete
    </a>

</div>

<div class="container mt-4">
    <div class="row">
        <!-- Images Section -->
        <div class="col-md-6">
            <div id="carouselVehicleImages" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @if (Model.ImageUrls != null && Model.ImageUrls.Count > 0)
                    {
                        @for (int i = 0; i < Model.ImageUrls.Count; i++)
                        {
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <img src="@Model.ImageUrls[i]" class="d-block w-100" alt="Vehicle Image" style="max-height: 400px; object-fit: cover;">
                            </div>
                        }
                    }
                    else
                    {
                        <div class="carousel-item active">
                            <img src="https://via.placeholder.com/400x300?text=No+Image" class="d-block w-100" alt="No Image">
                        </div>
                    }
                </div>
                @if (Model.ImageUrls != null && Model.ImageUrls.Count > 1)
                {
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselVehicleImages" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselVehicleImages" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                }
            </div>
        </div>

        <!-- Details Section -->
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Brand</dt>
                <dd class="col-sm-8">@Model.BrandName</dd>

                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Model.CategoryName</dd>

                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8 text-success fw-bold">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-4">Condition</dt>
                <dd class="col-sm-8">
                    <span class="badge bg-info">@Model.Condition</span>
                </dd>

                <dt class="col-sm-4">Frame Size</dt>
                <dd class="col-sm-8">@Model.FrameSize</dd>

                <dt class="col-sm-4">Year Manufactured</dt>
                <dd class="col-sm-8">@Model.YearManufactured</dd>

                <dt class="col-sm-4">Color</dt>
                <dd class="col-sm-8">@Model.Color</dd>

                <dt class="col-sm-4">Location</dt>
                <dd class="col-sm-8">@Model.Location</dd>

                <dt class="col-sm-4">Status</dt>
                <dd class="col-sm-8">
                    @if (Model.Status == "available")
                    {
                        <span class="badge bg-success">Available</span>
                    }
                    else if (Model.Status == "sold")
                    {
                        <span class="badge bg-danger">Sold</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">@Model.Status</span>
                    }
                </dd>

                <dt class="col-sm-4">Created At</dt>
                <dd class="col-sm-8">@Model.CreatedAt?.ToString("g")</dd>
            </dl>

            <hr />

            <h5>Description</h5>
            <p>@Model.Description</p>

            <hr />

            <h5>Seller Information</h5>
            <dl class="row">
                <dt class="col-sm-4">Seller</dt>
                <dd class="col-sm-8">@Model.SellerName</dd>
            </dl>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>